<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="#f5f5f5"
            >





                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Talent Planet 소개 (1/3)"
                    android:textColor="@color/textColor"
                    android:textSize="17dp"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    />

            </RelativeLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="15dp"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:src="@drawable/introduction1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Talent Planet은 취미 활동을 장려하기 위해 개발되었습니다."
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="현대사회에서 취미 생활의 중요도가 낮아지고 있어 안타깝습니다."
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="모두가 인정하듯, 취미 생활은 삶을 더 풍요롭게 해줍니다."
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="더 나아가 취미로 시작한 작은 배움이 큰 재능이 되기도 하지요."
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="혹시 아나요? 취미 생활을 통해 하루하루 소모되는 삶이 아닌,"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="하루하루 채워지는 삶으로 변할지요."
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Talent Planet을 통해 다양한 분야에 취미 생활을 도전해보세요."
                android:textSize="12dp" />


        </LinearLayout>

    </LinearLayout>




</LinearLayout>