<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/CustomerService_UpdateList_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="어플리케이션 서비스 시작"
                android:textColor="#000000"
                android:textStyle="bold"
                android:ellipsize="end"
                android:layout_marginRight="10dp"
                android:lines="1"
                android:layout_marginLeft="25dp"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/CustomerService_UpdateList_Summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="12dp"
                android:paddingLeft="30dp"
                android:layout_marginTop="5dp"
                android:text="Talent Planet 어플리케이션 서비스가 2018.3월 부로 Open 하였습니다."
                />

        </LinearLayout>

        <TextView
            android:id="@+id/CustomerService_UpdateList_Date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Mar.2018"
            android:textColor="#000000"
            android:gravity="center"
            />

    </LinearLayout>


</LinearLayout>