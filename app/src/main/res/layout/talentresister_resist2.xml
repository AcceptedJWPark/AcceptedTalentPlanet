<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    android:id="@+id/TalentResister2_listboxDL"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/TalentResister_container2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <include
            layout="@layout/drawerlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3.01"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:fitsSystemWindows="true"
        >
        <include
            android:layout_width="match_parent"
            android:layout_height="40dp"
            layout="@layout/toolbarlayout"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="재능드림 ▼"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17dp"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="&quot;회원님의 재능을 공유해주세요!&quot;" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#32579a"
            android:text="재능드림 등록하기"
            android:textColor="#ffffff" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.01"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#ebebeb"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1.5"
        android:padding="10dp"
        android:id="@+id/linearLayout">


            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="관심재능 ▼"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17dp"
                android:textStyle="bold|italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="&quot;회원님의 관심사를 시작해보세요!&quot;" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Keyword"
                    android:textColor="#000000"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TalentResister2_Take_Keyword1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:lines="1"
                    android:paddingLeft="15dp"
                    android:text="Guitar"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/TalentResister2_Take_Keyword2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:lines="1"
                    android:paddingLeft="15dp"
                    android:text="Piano"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/TalentResister2_Take_Keyword3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:lines="1"
                    android:paddingLeft="15dp"
                    android:text="Drum"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10dp"
                    android:textStyle="bold|italic" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Location"
                    android:textColor="#000000"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TalentResister2_Take_Location1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:lines="1"
                    android:paddingLeft="15dp"
                    android:text="경기도 파주시 광탄면"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/TalentResister2_Take_Location2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:lines="1"
                    android:paddingLeft="15dp"
                    android:text="경기도 일산동구 정발산동"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/TalentResister2_Take_Location3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:lines="1"
                    android:paddingLeft="15dp"
                    android:text="서울시 마포구 상수동"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10dp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Level"
                    android:textColor="#000000"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TalentResister2_Take_Level"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.5"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:lines="1"
                    android:paddingLeft="15dp"
                    android:text="중급 (Intermediate)"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10dp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Point"
                    android:textColor="#000000"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TalentResister2_Take_Point"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.5"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:lines="1"
                    android:paddingLeft="15dp"
                    android:text="150P"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10dp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#32579a"
                android:text="관심재능 수정하기"
                android:textColor="#ffffff" />


    </LinearLayout>

</LinearLayout>

</android.support.v4.widget.DrawerLayout>