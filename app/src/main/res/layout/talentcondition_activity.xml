<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawerLayout_TalentCondition"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">




<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:weightSum="24"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:padding="0dp"
        android:fitsSystemWindows="true"
        >
        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/toolbarlayout"/>
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/clickedContainer"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >

        <Button
            android:id="@+id/btn_SelectGive_TalentCondition"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="재능 드림"
            android:textStyle="bold"
            android:textColor="@color/textcolor_giveortake_clicked"
            android:background="@drawable/bgr_giveortake_clicked"
            android:textSize="@dimen/MainTxt"
            />

        <Button
            android:id="@+id/btn_SelectTake_TalentCondition"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/textcolor_giveortake_unclicked"
            android:background="@drawable/bgr_giveortake_unclicked"
            android:gravity="center"
            android:text="관심 재능"
            android:textSize="@dimen/MainTxt"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_TextContainer_TalentCondition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/Height20dp"
        android:layout_marginBottom="@dimen/Height30dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|top"
            >

            <TextView
                android:id="@+id/tv_TalentType_TalentCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="재능드림 : "
                android:textColor="@color/textColor_txtpage"
                android:textSize="@dimen/BigTxt"
                />


            <TextView
                android:id="@+id/tv_Condition_TalentCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="대기 중..."
                android:textColor="@color/textColor_subject"
                android:textSize="@dimen/SubTxt"
                />


        </LinearLayout>


    <TextView
        android:id="@+id/tv_Txt_TalentCondition"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:gravity="center|bottom"
        android:text="Shall we List 확인 또는 T.Sharing을 진행해보세요!"
        android:textColor="@color/textColor_txtpage"
        android:textSize="@dimen/SubTxt" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_PictureContainer_TalentCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/TalentCondition_ProfileShowLL"
            android:layout_width="@dimen/Pic68dp"
            android:layout_height="@dimen/Pic68dp"
            android:background="@drawable/bgr_picture_container"
            android:padding="5dp">

            <ImageView
                android:id="@+id/TalentCondition_ProfilePicture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="false"
                android:scaleType="fitXY"
                android:src="@drawable/picure_basic" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Profile 보기"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/SubTxt"
            android:textStyle="bold" />


    </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_BtnContainer_TalentCondition"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="@dimen/Height30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_Left_TalentCondition"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/bgr_bigbtn"
                android:textAllCaps="false"
                android:text="Shall we ?"
                android:textColor="@color/textcolor_bigbtn"
                android:textSize="@dimen/MainTxt"
                android:visibility="visible" />



            <Button
                android:id="@+id/btn_Right_TalentCondition"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/bgr_bigbtn"
                android:text="T.Sharing"
                android:textAllCaps="false"
                android:textColor="@color/textcolor_bigbtn"
                android:textSize="@dimen/MainTxt"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_TalentRegist_TalentCondition"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/bgr_bigbtn"
                android:text="재능드림 등록하기"
                android:textAllCaps="false"
                android:textColor="@color/textcolor_bigbtn"
                android:textSize="@dimen/MainTxt"
                android:visibility="gone" />
        </LinearLayout>


    </LinearLayout>


    <FrameLayout
        android:id="@+id/view_drawerView_TalentCondition"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <include
            layout="@layout/drawerlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
</android.support.v4.widget.DrawerLayout>