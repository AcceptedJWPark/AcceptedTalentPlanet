<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:weightSum="24"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.94"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal"
            >
<RelativeLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="0.7"
    >

    <ImageView
        android:id="@+id/TalentSharingPopup_addfriendList_on"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:tint="#7fffff00"
        android:src="@android:drawable/star_big_on"/>
    <ImageView
        android:id="@+id/TalentSharingPopup_addfriendList_off"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:visibility="gone"
        android:src="@android:drawable/star_big_off"/>

</RelativeLayout>


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"/>

        </LinearLayout>


        <ImageView
            android:id="@+id/popup_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:src="@drawable/textpicture" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal"
            >

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"/>

            <ImageView
                android:id="@+id/TalentSharing_pupupclosebtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:adjustViewBounds="true"
                android:tint="#26000000"
                android:src="@android:drawable/ic_menu_close_clear_cancel" />


        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.08"
        android:background="@drawable/divider_background"
        android:textColor="@color/textcolor_devider"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:textSize="@dimen/Divider"
        android:paddingLeft="15dp"
        android:text="회원 정보"
        />




    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.69"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.9"
                    android:textColor="@color/textColor_normal"
                    android:textSize="@dimen/Popup_ItemTitle"
                    android:textStyle="bold"
                    android:gravity="center|left"
                    android:text="이름" />

                <TextView
                    android:id="@+id/TalentSharingPopup_UserName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:textColor="@color/textColor_object"
                    android:textSize="@dimen/Popup_ItemSubTitle"
                    android:paddingLeft="10dp"
                    android:text="박종우" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.69"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center|left"
                    android:textColor="@color/textColor_normal"
                    android:textSize="@dimen/Popup_ItemTitle"
                    android:textStyle="bold"
                    android:text="성별" />

                <TextView
                    android:id="@+id/TalentSharingPopup_UserGender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:paddingLeft="10dp"
                    android:textColor="@color/textColor_object"
                    android:textSize="@dimen/Popup_ItemSubTitle"
                    android:text="남자" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.69"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center|left"
                    android:text="생년월일"
                    android:textColor="@color/textColor_normal"
                    android:textSize="@dimen/Popup_ItemTitle"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TalentSharingPopup_UserBirth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:paddingLeft="10dp"
                    android:textColor="@color/textColor_object"
                    android:textSize="@dimen/Popup_ItemSubTitle"
                    android:text="1991.01.23" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.69"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center|left"
                    android:textColor="@color/textColor_normal"
                    android:textSize="@dimen/Popup_ItemTitle"
                    android:textStyle="bold"
                    android:text="직업" />

                <TextView
                    android:id="@+id/TalentSharingPopup_UserJob"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:paddingLeft="10dp"
                    android:textColor="@color/textColor_object"
                    android:textSize="@dimen/Popup_ItemSubTitle"
                    android:text="무직" />
            </LinearLayout>



    <TextView
        android:id="@+id/TalentSharing_TypeText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.08"
        android:background="@drawable/divider_background"
        android:textColor="@color/textcolor_devider"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:textSize="@dimen/Divider"
        android:paddingLeft="15dp"
        android:text="재능 드림"
        />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.69"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center|left"
                android:text="키워드"
                android:textColor="@color/textColor_normal"
                android:textSize="@dimen/Popup_ItemTitle"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8">

                <TextView
                    android:id="@+id/TalentSharingPopup_Keyword1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"
                    android:paddingLeft="10dp"
                    android:text="Guitar"
                    android:textColor="@color/textColor_object"
                    android:textSize="@dimen/Popup_ItemSubTitle"
                    />

                <TextView
                    android:id="@+id/TalentSharingPopup_Keyword2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"
                    android:paddingLeft="10dp"
                    android:text="Piano"
                    android:textColor="@color/textColor_object"
                    android:textSize="@dimen/Popup_ItemSubTitle"
                    />

                <TextView
                    android:id="@+id/TalentSharingPopup_Keyword3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"
                    android:paddingLeft="10dp"
                    android:text="Drum"
                    android:textColor="@color/textColor_object"
                    android:textSize="@dimen/Popup_ItemSubTitle"
                    />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5.07"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="10"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="장소"
                    android:textColor="@color/textColor_normal"
                    android:textSize="@dimen/Popup_ItemTitle"
                    android:textStyle="bold" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/TalentSharingPopup_Location1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:paddingLeft="10dp"
                    android:gravity="center"
                    android:lines="1"
                    android:text="서울시 마포구 상수동"
                    android:textColor="@color/textColor_object"
                    android:textSize="@dimen/Popup_ItemSubTitle"
                    />

                <TextView
                    android:id="@+id/TalentSharingPopup_Location2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="경기도 고양시 일산동구 정발산동"

                    android:textColor="@color/textColor_object"
                    android:textSize="@dimen/Popup_ItemSubTitle"
                    />

                <TextView
                    android:id="@+id/TalentSharingPopup_Location3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:paddingLeft="10dp"
                    android:gravity="center"
                    android:lines="1"
                    android:text="경기도 파주시 광탄면"
                    android:textColor="@color/textColor_object"
                    android:textSize="@dimen/Popup_ItemSubTitle"
                    />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.69"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center|left"
                android:text="수준"
                android:textColor="@color/textColor_normal"
                android:textSize="@dimen/Popup_ItemTitle"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TalentSharingPopup_Level"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:paddingLeft="10dp"
                android:text="시작단계(Beginner)"
                android:textColor="@color/textColor_object"
                android:textSize="@dimen/Popup_ItemSubTitle"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.69"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center|left"
                android:text="포인트"
                android:textColor="@color/textColor_normal"
                android:textSize="@dimen/Popup_ItemTitle"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TalentSharingPopup_Point"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:paddingLeft="10dp"
                android:text="120P"
                android:textColor="@color/textColor_object"
                android:textSize="@dimen/Popup_ItemSubTitle"
                />
        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center"
        >

        <Button
            android:textAllCaps="false"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/big_button_background"
            android:textColor="@color/textcolor_bigbtn"
            android:layout_marginRight="5dp"
            android:textSize="@dimen/Popup_BigBtn"
            android:layout_weight="1"
            android:text="Message"
            />

        <Button
            android:id="@+id/TalentSharing_Interest_Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/big_button_background"
            android:text="관심"
            android:textColor="@color/textcolor_bigbtn"
            android:textSize="@dimen/Popup_BigBtn"
            />

    </LinearLayout>
</LinearLayout>






