<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >

            <TextView
                android:id="@+id/CustomerService_Claim_SharingListName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="박종우"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15dp"
                />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/CustomerService_Claim_SharingListName"
            android:layout_alignBottom="@id/CustomerService_Claim_SharingListName"
            android:orientation="horizontal"
            android:id="@+id/linearLayout2">


            <TextView
                android:id="@+id/CustomerService_Claim_SharingListKeyword1"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:text="기타"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:ellipsize="end"
                android:lines="1"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="13dp"
                />

            <TextView
                android:id="@+id/CustomerService_Claim_SharingListKeyword2"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text="Guitar"
                android:textColor="@color/textColor"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/CustomerService_Claim_SharingListKeyword3"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:ellipsize="end"
                android:lines="1"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="기타 독학"
                android:textColor="@color/textColor"
                android:textSize="13dp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/CustomerService_Claim_SharingListName"
            android:layout_marginTop="5dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="13dp"
                    android:text="재능 상태 : "
                    />

                <TextView
                    android:id="@+id/CustomerService_Claim_SharingListTalentCondition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="13dp"
                    android:text="진행"
                    />

            </LinearLayout>



            <TextView
                android:id="@+id/CustomerService_Claim_SharingListRegistDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="12dp"
                android:paddingLeft="20dp"
                android:text="2017.11.03 16:24 등록"
                />



    </LinearLayout>


        <Button
            android:id="@+id/CustomerService_Claim_SharingListBtn"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:focusable="false"
            android:background="@drawable/small_button_whitebackground"
            android:textColor="@color/textColor"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="선택"
            />
    </RelativeLayout>
</LinearLayout>