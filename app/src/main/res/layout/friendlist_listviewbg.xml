<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/Height70dp"
    android:gravity="center"
    android:background="#ffffff"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    >


    <LinearLayout
        android:id="@+id/ll_pictureContainer_FriendList"
        android:layout_width="@dimen/Height50dp"
        android:layout_height="@dimen/Height50dp"
        android:background="@drawable/bgr_picture_container"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <ImageView
            android:id="@+id/im_Picture_FriendList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="false"
            android:layout_weight="1"
            android:gravity="center"
            android:scaleType="fitXY"
            />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_txtContainer_FriendList"
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_marginRight="10dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            >
        <TextView
            android:id="@+id/tv_Name_FriendList"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="박종우"
            android:textSize="@dimen/MainTxt"
            android:textColor="@color/textcolor_nameortitle"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_Condition_FriendList"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text=" 님의 재능은 현재 대기 중입니다."
            android:textSize="@dimen/SubTxt"
            android:textColor="@color/textColor_object"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_Talent1_FriendList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#f5f5f5"
                android:gravity="left"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:singleLine="true"
                android:text="Guitar"
                android:textColor="@color/textColor_subject"
                android:textSize="@dimen/SubTxt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_Talent2_FriendList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vocal"
                android:gravity="center"
                android:textColor="@color/textColor_subject"
                android:textSize="@dimen/SubTxt"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:background="#f5f5f5"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_Talent3_FriendList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dance"
                android:gravity="center"
                android:textColor="@color/textColor_subject"
                android:textSize="@dimen/SubTxt"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:background="#f5f5f5"
                android:textStyle="bold"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>


