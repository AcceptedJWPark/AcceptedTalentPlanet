<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:weightSum="24"
    >


    <LinearLayout
        android:id="@+id/claim_toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"
        android:gravity="center"
        android:background="#f5f5f5"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TalentPlanet 소개 (3/3)"
                android:textStyle="bold"
                android:textSize="@dimen/ToolbarTxt"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textColor="@color/textColor"
                />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"></View>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:adjustViewBounds="true"
        android:padding="10dp"
        android:src="@drawable/introduction3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10.3"
        android:gravity="center|top"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="재능은 &quot;어떤 일을 하는데 필요한 재주와 능력&quot;으로 정의됩니다."
            android:textSize="@dimen/Introduction"
            android:textColor="@color/textColor"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="재능을 정의하는데 실력이나 경력, 특별한 자격증 등의 기준은 없습니다."
            android:textSize="@dimen/Introduction"
            android:textColor="@color/textColor"
            android:gravity="center"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="새로운 도전을 하는 사람에게 해당 분야의 경험자는 모두 &quot;재능인&quot;입니다."
            android:textSize="@dimen/Introduction"
            android:textColor="@color/textColor"
            android:gravity="center"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="우리 모두는 누군가의 선생님이 될 수 있고 또 제자가 될 수 있습니다."
            android:textSize="@dimen/Introduction"
            android:textColor="@color/textColor"
            android:gravity="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="&quot;정말 배우는데는 선생이나 교실이나 화려한 전통 따위나 돈도 필요"
            android:textSize="@dimen/Introduction"
            android:textColor="@color/textColor"
            android:gravity="center"
            />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="없거든요. 필요한건 단지 자신을 개선하고자 하는 사람들 뿐입니다.&quot;"
            android:textSize="@dimen/Introduction"
            android:textColor="@color/textColor"
            android:gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:text="- 영화 Accpeted 중 -"
            android:layout_gravity="right"
            android:textSize="@dimen/Introduction"
            android:textColor="@color/textColor"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >

        <Button
            android:id="@+id/TalnetPlanetIntro3PreBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="돌아가기"
            android:gravity="center"
            android:onClick="clickStart"
            android:background="@drawable/big_button_background"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            />

    </LinearLayout>


</LinearLayout>