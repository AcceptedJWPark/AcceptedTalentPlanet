<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="24"
            >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="#ffffff"
    android:gravity="center|left"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/tv_ChildQuestion_QuestionList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor_object"
        android:lineSpacingExtra="10dp"
        android:textSize="@dimen/ListView_ChildTxt_Question"
        android:text="2018 2월 부로 Talent Planet Test가 시작되었습니다. \n2018년 3월 부로 Service 오픈 예정이오니, 많은 관심 부탁드립니다.\n"
        />

</LinearLayout>





    <LinearLayout
        android:gravity="center|left"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgr_answer"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_ChildAnswer_QuestionList"
            android:layout_width="wrap_content"
            android:gravity="center|left"
            android:layout_height="match_parent"
            android:textColor="@color/textColor_object"
            android:lineSpacingExtra="10dp"
            android:textSize="@dimen/ListView_ChildTxt_Question"
            android:textStyle="bold"
            android:text="박종우님과 재 드림 기타, 드럼, 종우님과 재 드림 기타, 드럼, 피, 드럼, 피아노 완료의 건"
            />

    </LinearLayout>



</LinearLayout>
</LinearLayout>
