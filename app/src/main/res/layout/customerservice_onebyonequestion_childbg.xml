<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#eeeeee"/>


    <TextView
        android:id="@+id/CustomerService_OnebyOneQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:background="#ffffff"
        android:lineSpacingExtra="15dp"
        android:paddingBottom="10dp"
        android:textSize="11.5dp"
        android:text="2018 2월 부로 Talent Planet Test가 시작되었습니다. \n2018년 3월 부로 Service 오픈 예정이오니, 많은 관심 부탁드립니다.\n"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#eeeeee"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="답변 내용"
        android:textStyle="bold"
        android:padding="5dp"
        android:textColor="#000000"
        android:textSize="14dp"
        android:background="#eeeeee"
        />
    <TextView
        android:id="@+id/CustomerService_OnebyOneAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:lineSpacingExtra="15dp"
        android:paddingBottom="10dp"
        android:background="#96f5f5f5"
        android:textColor="#000000"
        android:textSize="14dp"
        android:text="2018 2월 부로 Talent Planet Test가 시작되었습니다. \n2018년 3월 부로 Service 오픈 예정이오니, 많은 관심 부탁드립니다."
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Talent Planet 개발자 배상"
        android:textSize="13dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="right"
        android:background="#96f5f5f5"
        android:paddingBottom="10dp"
        android:paddingRight="20dp"

        />


</LinearLayout>
