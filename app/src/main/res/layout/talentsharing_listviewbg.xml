<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#ffffff"
    android:padding="5dp"
    android:gravity="center"
    >
    <ImageView
        android:id="@+id/TalentSharing_Picture"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:layout_weight="1"
        android:gravity="center"
        android:src="@drawable/textpicture"
    />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="5"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TalentSharing_Name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="center|left"
            android:text="박종우"
            android:textSize="@dimen/ListView_TitleorName"
            android:textColor="#000000"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TalentSharing_Keyword1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Guitar"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:textSize="@dimen/ListView_SecondLine"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="#f5f5f5"
                />

            <TextView
                android:id="@+id/TalentSharing_Keyword2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vocal"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:textSize="@dimen/ListView_SecondLine"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="#f5f5f5"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:id="@+id/TalentSharing_Keyword3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dance"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:textSize="@dimen/ListView_SecondLine"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="#f5f5f5"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/TalentSharing_Distance"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="9km"
        android:layout_weight="1"
        android:singleLine="true"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/ListView_TitleorName"
        android:textColor="#000000"
        />



</LinearLayout>


