<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:padding="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:gravity="center"
    >
    <ImageView
        android:id="@+id/TalentSharing_Picture"
        android:layout_width="0dp"
        android:adjustViewBounds="true"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:src="@drawable/textpicture"
        android:textStyle="bold|italic"
    />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TalentSharing_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:text="박종우"
            android:textSize="15dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TalentSharing_Keyword1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:text="Guitar"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="13dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/TalentSharing_Keyword2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Vocal"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="13dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/TalentSharing_Keyword3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dance"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="13dp"
                android:textStyle="bold|italic" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/TalentSharing_Distance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="93%"
        android:layout_weight="1.3"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="17dp"
        android:layout_gravity="center"
        />

        <Button
            android:id="@+id/TalentSharing_ShowProfile"
        android:textAllCaps="false"
        android:layout_weight="1.5"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:text="Profile 보기"
        android:gravity="center"
        android:onClick="talentSharing_pupupclosebtn"
        android:textColor="@color/colorPrimaryDark"
        android:background="#ffffff"
        android:textSize="12dp"
        android:textStyle="bold|italic"
        />

</LinearLayout>


