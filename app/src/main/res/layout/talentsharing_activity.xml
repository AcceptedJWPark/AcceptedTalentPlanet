<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    android:id="@+id/TalentSharing_listboxDL"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:weightSum="24"
    tools:context="com.example.accepted.acceptedtalentplanet.TalentSharing.TalentSharing_Activity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:fitsSystemWindows="true"
        >
        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/toolbarlayout"/>
    </android.support.v7.widget.Toolbar>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/TalentSharing_GiveCheck"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/small_button_graybackground"
                    android:text="재능드림 보기"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/GiveorTakeBtn"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/TalentSharing_TakeCheck"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/small_button_whitebackground"
                    android:text="관심재능 보기"
                    android:textColor="#d2d2d2"
                    android:textSize="@dimen/GiveorTakeBtn"
                    android:textStyle="bold" />
            </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        />

            <TextView
                android:id="@+id/TalentSharing_PageTxt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/Page_Txt"
                android:textColor="@color/textColor"
                android:text="박종우님의 재능을 공유할 수 있는 회원 리스트 입니다."
                />

                <ListView
                    android:id="@+id/TalentSharing_LV"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20.3"
                    android:padding="3dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    >
                </ListView>


        </LinearLayout>



    <FrameLayout
        android:id="@+id/TalentSharing_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <include
            layout="@layout/drawerlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
</android.support.v4.widget.DrawerLayout>




