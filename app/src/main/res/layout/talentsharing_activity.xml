<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    android:id="@+id/TalentSharing_listboxDL"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:weightSum="24"
    tools:context="com.example.accepted.acceptedtalentplanet.TalentSharing.TalentSharing_Activity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.32"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:padding="0dp"
        android:fitsSystemWindows="true"
        >
        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/toolbarlayout"/>
    </android.support.v7.widget.Toolbar>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >

                <Button
                    android:id="@+id/TalentSharing_GiveCheck"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/small_button_graybackground"
                    android:text="재능 드림"
                    android:textColor="@color/textcolor_giveortake_clicked"
                    android:textSize="@dimen/GiveorTakeBtn"
                    />

                <Button
                    android:id="@+id/TalentSharing_TakeCheck"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/small_button_whitebackground"
                    android:text="관심 재능"
                    android:textColor="@color/textcolor_giveortake_unclicked"
                    android:textSize="@dimen/GiveorTakeBtn"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/TalentSharing_PageTxt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/Page_Txt"
                android:textColor="@color/textColor_txtpage"
                android:layout_marginBottom="10dp"
                android:text="박종우님의 재능을 공유할 수 있는 회원 리스트 입니다."
                />

                <ListView
                    android:id="@+id/TalentSharing_LV"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20.68"
                    android:padding="3dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    >
                </ListView>


        </LinearLayout>



    <FrameLayout
        android:id="@+id/TalentSharing_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <include
            layout="@layout/drawerlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
</android.support.v4.widget.DrawerLayout>




