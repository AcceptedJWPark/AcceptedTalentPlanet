<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <android.support.v4.view.ViewPager
        android:id="@+id/vp_Intro1_Introduction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </android.support.v4.view.ViewPager>


    <Button
        android:id="@+id/btn_intro"
        android:layout_width="@dimen/Login_btn"
        android:layout_height="30dp"
        android:background="@drawable/bgr_bigbtn2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/Margin_title"
        android:text="시작 하기"
        android:textColor="@color/textcolor_bigbtn"
        android:textSize="@dimen/BigBtn"
        android:visibility="gone"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/Margin_title"
        >

        <TextView
            android:id="@+id/text_Intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/Page_Txt"
            android:textColor="#ffffff"
            android:text="1 "
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/Page_Txt"
            android:textColor="#ffffff"
            android:text="/ 3"
            />


    </LinearLayout>

    </RelativeLayout>
