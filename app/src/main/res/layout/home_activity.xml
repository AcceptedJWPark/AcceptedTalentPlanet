<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Home_listboxDL"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:padding="0dp"
        android:fitsSystemWindows="true"
        >
        <include
            android:layout_width="match_parent"
            android:layout_height="50dp"
            layout="@layout/toolbarlayout"/>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:id="@+id/txt_NewTalentMent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&quot;새로운 재능을 아래에서 확인해보세요!&quot;"
                android:textSize="12dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_centerHorizontal="true"
                android:textColor="#828282"
                />
            <TextView
                android:id="@+id/txt_NewTalent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_NewTalentMent"
                android:text="New Talent ▼"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorPrimaryDark"
                />

            <TextView
                android:id="@+id/Home_NewTalent_TakeTalent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관심"
                android:layout_alignBaseline="@+id/txt_NewTalent"
                android:textSize="10dp"
                android:layout_toLeftOf="@+id/bar_NewTakeTalentList"
                android:textStyle="bold"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/bar_NewTakeTalentList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textSize="15dp"
                android:layout_alignBaseline="@+id/Home_NewTalent_TakeTalent"
                android:layout_toLeftOf="@+id/Home_NewTalent_GiveTalent"
                android:layout_gravity="right"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#dcd7d7"
                />

            <TextView
                android:id="@+id/Home_NewTalent_GiveTalent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="드림"
                android:layout_alignBaseline="@+id/Home_NewTalent_TakeTalent"
                android:layout_alignParentRight="true"
                android:textSize="10dp"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:textStyle="bold"
                android:textColor="#c8c8c8"
                />
            <LinearLayout
                android:id="@+id/NewTalentLL"
                android:layout_below="@+id/bar_NewTakeTalentList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/Home_NewTalent_recycler_view"
                    app:layoutManager="LinearLayoutManager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal"
                    >
                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/HotTalentLL"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/NewTalentLL"
                >
                <TextView
                    android:id="@+id/txt_HotTalentMent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&quot;금주의 인기재능을 아래에서 확인해보세요!&quot;"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="#828282"
                    />
                <TextView
                    android:id="@+id/txt_HotTalent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_HotTalentMent"
                    android:text="Hot Talent ▼"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorPrimaryDark"
                    />

                <TextView
                    android:id="@+id/Home_HotTalent_TakeTalent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="관심"
                    android:layout_alignBaseline="@+id/txt_HotTalent"
                    android:textSize="10dp"
                    android:layout_toLeftOf="@+id/bar_HotTakeTalentList"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    />
                <TextView
                    android:id="@+id/bar_HotTakeTalentList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:textSize="15dp"
                    android:layout_alignBaseline="@+id/Home_HotTalent_TakeTalent"
                    android:layout_toLeftOf="@+id/Home_HotTalent_GiveTalent"
                    android:layout_gravity="right"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="#dcd7d7"
                    />

                <TextView
                    android:id="@+id/Home_HotTalent_GiveTalent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="드림"
                    android:layout_alignBaseline="@+id/Home_HotTalent_TakeTalent"
                    android:layout_alignParentRight="true"
                    android:textSize="10dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="30dp"
                    android:textStyle="bold"
                    android:textColor="#c8c8c8"
                    />

                <ListView
                    android:id="@+id/Home_HotTalent_ListView"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginLeft="30dp"
                    android:scrollbars="none"
                    android:layout_marginRight="30dp"
                    android:layout_below="@+id/txt_HotTalent"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/BestTalentLL"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/HotTalentLL"
                >
                <TextView
                    android:id="@+id/txt_BestTalentMent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&quot;Best Talent를 아래에서 만나보세요!&quot;"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="#828282"
                    />

                <TextView
                    android:id="@+id/txt_BestTalent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_BestTalentMent"
                    android:text="Best Talent ▼"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorPrimaryDark"
                    />

                <ListView
                    android:id="@+id/Home_BestTalent_ListView"
                    android:layout_width="match_parent"
                    android:layout_height="310dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="40dp"
                    android:layout_below="@+id/txt_BestTalent"
                    />

            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>

</LinearLayout>
    <FrameLayout
        android:id="@+id/Home_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <include
            layout="@layout/drawerlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
</android.support.v4.widget.DrawerLayout>
