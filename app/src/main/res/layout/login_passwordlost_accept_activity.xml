<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:weightSum="24"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/Page_Txt"
        android:textColor="@color/textColor_txtpage"
        android:text="&quot;회원님의 계정(Email)에서 인증번호를 확인해주세요.&quot;"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/PasswordLost_Email"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/Edit_Hint" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            >

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.1"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/small_button_graybackground"
                android:text="E-mail 인증"
                android:textAllCaps="false"
                android:textSize="@dimen/ListView_Btn"
                android:textColor="@color/textcolor_bigbtn"
                android:onClick="PasswordLost_emailCheck"
                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.1"/>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/accept_join_mail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.9"
        android:visibility="gone"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.6"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/PasswordLost_EmailCode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:inputType="number"
                android:hint="인증번호 입력"
                android:textSize="@dimen/Edit_Hint"
                />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                >

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.1"/>

                <Button
                    android:id="@+id/btnAccept"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/small_button_graybackground"
                    android:text="인증 완료"
                    android:textAllCaps="false"
                    android:textSize="@dimen/ListView_Btn"
                    android:textColor="@color/textcolor_bigbtn"
                    android:onClick="PasswordLost_emailAccept"
                    />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.1"/>

            </LinearLayout>

        </LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/big_button_background"
            android:onClick="goNext"
            android:text="다 음"
            android:textColor="@color/textcolor_bigbtn"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/BigBtn"
            />


    </LinearLayout>


</LinearLayout>
