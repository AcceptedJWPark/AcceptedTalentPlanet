<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".TalentResister.TalentResister_Location_Activity"
    android:weightSum="24"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="&quot;희망 재능 공유 장소를 입력해주세요. &quot;(최대 3개 입력)"
            android:textColor="@color/textColor"
            android:gravity="center"
            android:textSize="@dimen/Page_Txt"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="Ex) 서울시 마포구 상수동"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/Page_Txt_Example"
            />
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        >

        <AutoCompleteTextView
            android:id="@+id/TalentResister_Location"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:dropDownWidth="match_parent"
            android:dropDownHeight="wrap_content"
            android:textSize="@dimen/Edit_Hint"
            android:paddingLeft="5dp"
            android:maxLines="1"
            android:hint="주소 검색"
            android:layout_weight="4"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>

            <Button
                android:id="@+id/addLoctionBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@drawable/small_button_whitebackground"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="등록"
                android:textColor="#000000"
                android:textSize="@dimen/ListView_Btn"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        >

        <ListView
            android:id="@+id/location_ListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:dividerHeight="0dp"
            android:divider="#ffffff"
            >
        </ListView>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="70dp"
        android:textSize="@dimen/BigBtn"
        android:layout_marginRight="70dp"
        android:background="@drawable/big_button_background"
        android:onClick="goNext"
        android:text="다 음"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/textColor" />

</LinearLayout>


