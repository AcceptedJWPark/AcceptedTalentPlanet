<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="TalentResister.TalentResisterActivity_Location">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&quot;희망 재능 공유 장소를 입력해주세요. &quot;(읍/면/동 까지 입력)"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textColor="@color/textColor"
        android:textSize="14dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ex) 서울시 마포구 상수동"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textSize="12dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="장소 1. "
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            android:textSize="13dp"
            android:layout_weight="1.5"
            />
        <EditText
            android:id="@+id/TalentResister_Talent_Location1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:hint="첫 번째 장소를 입력해주세요."
            android:layout_weight="4"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="@drawable/small_button_whitebackground"
            android:gravity="center"
            android:onClick="registLocation1"
            android:text="등록"
            android:textColor="#000000"
            android:textSize="12dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="장소 2. "
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            android:textSize="13dp"
            android:layout_weight="1.5"
            />
        <EditText
            android:id="@+id/TalentResister_Talent_Location2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:hint="두 번째 장소를 입력해주세요."
            android:layout_weight="4"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="@drawable/small_button_whitebackground"
            android:gravity="center"
            android:onClick="registLocation2"
            android:text="등록"
            android:textColor="#000000"
            android:textSize="12dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="장소 3. "
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            android:textSize="13dp"
            android:layout_weight="1.5"
            />
        <EditText
            android:id="@+id/TalentResister_Talent_Location3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:hint="세 번째 장소를 입력해주세요."
            android:layout_weight="4"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="@drawable/small_button_whitebackground"
            android:gravity="center"
            android:onClick="registLocation3"
            android:text="등록"
            android:textColor="#000000"
            android:textSize="12dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <TextView
            android:id="@+id/Location_key1"
            android:layout_width="0dp"
            android:ellipsize="end"
            android:lines="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="12dp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/Location_key2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="12dp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/Location_key3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="12dp"
            android:layout_weight="1"
            />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="40dp"
        android:textSize="15dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/big_button_background"
        android:onClick="goNext"
        android:text="다 음"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/textColor" />

</LinearLayout>
