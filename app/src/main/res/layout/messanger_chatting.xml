<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="24"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true"
    >

    <LinearLayout
        android:id="@+id/claim_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/MyProfile_Toolbar"
        android:background="#002c62"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:id="@+id/ll_PreContainer_Chatting_Messanger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/Toolbar_Pre_Img"
                    android:layout_height="@dimen/Toolbar_Pre_Img"
                    android:tint="@color/toolbarcolor_txtandimage"
                    android:src="@drawable/icon_backbtn"

                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_User_Chatting_Messanger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="박종우"
                android:textSize="@dimen/ToolbarTxt"
                android:layout_centerInParent="true"
                android:textColor="@color/toolbarcolor_txtandimage"
                />

        </RelativeLayout>


    </LinearLayout>


    <ScrollView
        android:id="@+id/sv_Messanger_Chatting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="#fafafa"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:background="#f5f5f5"
        android:focusableInTouchMode="true"
        android:clickable="true"
        >

        <ListView
            android:id="@+id/list_Chatting_Messanger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="#f5f5f5"
            android:clickable="true"
            android:layout_above="@+id/ll_EditTxtContainer_Chatting_Messanger"
            android:cacheColorHint="#00000000"
            android:divider="#000000"
            android:listSelector="#00000000"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />


    <LinearLayout
        android:id="@+id/ll_EditTxtContainer_Chatting_Messanger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/brg_chatting_edittxt"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


            <EditText
                android:id="@+id/et_Chatting_Messanger"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:padding="5dp"
                android:lineSpacingExtra="5dp"
                android:includeFontPadding="false"
                android:minHeight="@dimen/Messanger_Chatting_EditTxt_minHeight"
                android:gravity="center_vertical"
                android:background="@drawable/brg_chatting_edittxt"
                android:layout_weight="8"
                />

        <LinearLayout
            android:id="@+id/ll_SendBtnContainer_Chatting_Messanger"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:minHeight="@dimen/Messanger_Chatting_EditTxt_minHeight"
            android:background="@drawable/bgr_messanger_sendbtn"
            android:layout_weight="1"
            android:gravity="center"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="@dimen/Messanger_Chatting_Text"
                android:text="전 송"
                android:includeFontPadding="false"
                />

        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>


    </ScrollView>
</LinearLayout>