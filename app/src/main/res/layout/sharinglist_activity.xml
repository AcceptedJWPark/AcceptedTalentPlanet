<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/SharingList_WholeLL"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:weightSum="24"
    android:clickable="true"
    android:focusableInTouchMode="true"
    >

    <LinearLayout
        android:id="@+id/ll_Toolbar_Question"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:background="@color/toolbarcolor_background"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >

            <LinearLayout
                android:id="@+id/ll_PreContainer_SharingList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"

                >

                <ImageView
                    android:layout_width="@dimen/Toolbar_Pre_Img"
                    android:layout_height="@dimen/Toolbar_Pre_Img"
                    android:src="@drawable/icon_backbtn"
                    />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="재능 공유 내역"
                android:textSize="@dimen/ToolbarTxt"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textColor="@color/toolbarcolor_txtandimage"
                />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:gravity="center"
        android:layout_marginTop="@dimen/Margin_btn"
        android:layout_marginBottom="@dimen/Margin_btn"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >

        <Button
            android:id="@+id/btn_SelectGive_SharingList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="재능 드림"
            android:textStyle="bold"
            android:textColor="@color/textcolor_giveortake_clicked"
            android:background="@drawable/bgr_giveortake_clicked"
            android:textSize="@dimen/GiveorTakeBtn"
            />

        <Button
            android:id="@+id/btn_SelectTake_SharingList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="관심 재능"
            android:textColor="@color/textcolor_giveortake_unclicked"
            android:background="@drawable/bgr_giveortake_unclicked"
            android:textSize="@dimen/GiveorTakeBtn"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="친구를 추가하여 Shall we를 전달할 수 있습니다."
            android:gravity="center"
            android:textSize="@dimen/Page_Txt"
            android:textColor="@color/textColor_txtpage"
            />
    </LinearLayout>

    <ListView
        android:id="@+id/listView_Give_SharingList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20.5"
        android:visibility="visible"
        >
    </ListView>

    <ListView
        android:id="@+id/listView_Take_SharingList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20.5"
        android:visibility="gone"
        >
    </ListView>


</LinearLayout>