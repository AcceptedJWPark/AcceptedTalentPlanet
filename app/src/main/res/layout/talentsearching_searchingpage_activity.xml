<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:weightSum="24">

        <TextView
            android:id="@+id/TalentSearching_TxtView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="&quot;아래 검색 조건을 입력해주세요!&quot;"
            android:textColor="@color/textColor"
            android:textSize="@dimen/Page_Txt"
            />


        <LinearLayout
            android:id="@+id/TalentSearching_LL1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:focusable="true"
            android:layout_marginBottom="10dp"
            android:focusableInTouchMode="true"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="키워드"
                android:textColor="@color/textColor"
                android:textSize="@dimen/Page_ItemTitle"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/TalentSearching_KeywordInput"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@drawable/small_button_whitebackground"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor"
                android:textSize="@dimen/TalentSearching_SpinnerTxt" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2" />

            <Button
                android:id="@+id/keyword_addBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/small_button_whitebackground"
                android:text="등 록"
                android:textColor="@color/textColor"
                android:textSize="@dimen/ListView_Btn" />
        </LinearLayout>


        <ListView
            android:id="@+id/TalentSearching_KeywordListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#ffffff"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:dividerHeight="0dp">
        </ListView>




        <LinearLayout
            android:id="@+id/TalentSearching_LL2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="장 소"
                android:textColor="@color/textColor"
                android:textSize="@dimen/Page_ItemTitle"
                android:textStyle="bold" />


                <Spinner
                    android:id="@+id/location_bigcategory_spinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:background="@drawable/small_button_whitebackground"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2" />


                <Spinner
                    android:id="@+id/location_smallcategory_spinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:background="@drawable/small_button_whitebackground"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/TalentSearching_LL3"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="수 준"
                android:textColor="@color/textColor"
                android:textSize="@dimen/Page_ItemTitle"
                android:textStyle="bold" />


            <Spinner
                android:id="@+id/level_start_spinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:background="@drawable/small_button_whitebackground"
                android:paddingLeft="3dp"
                android:paddingRight="3dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="27dp"
                android:layout_weight="0.2" />


            <Spinner
                android:id="@+id/level_end_spinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:background="@drawable/small_button_whitebackground"
                android:paddingLeft="3dp"
                android:paddingRight="3dp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/TalentSearching_LL4"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="포인트"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/Page_ItemTitle"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/TalentSearching_PointInput1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:background="@drawable/small_button_whitebackground"
                    android:gravity="center"
                    android:hint="이상"
                    android:inputType="number"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/textColor"
                    android:textSize="@dimen/TalentSearching_SpinnerTxt" />


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2" />

                <EditText
                    android:id="@+id/TalentSearching_PointInput2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:background="@drawable/small_button_whitebackground"
                    android:gravity="center"
                    android:hint="이하"
                    android:inputType="number"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/textColor"
                    android:textSize="@dimen/TalentSearching_SpinnerTxt" />

        </LinearLayout>

        <View
            android:id="@+id/TalentSearching_Devider"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/TalentSearching_SaveBtn"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textSize="@dimen/BigBtn"
            android:background="@drawable/big_button_background"
            android:text="저장 후 검색"
            android:textColor="@color/textColor"
            android:textStyle="bold" />


    </LinearLayout>

</ScrollView>