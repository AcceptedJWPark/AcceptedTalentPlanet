<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout_System"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:weightSum="24"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.32"
            android:contentInsetStart="0dp"
            android:contentInsetLeft="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:padding="0dp"
            android:fitsSystemWindows="true"
            >
            <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/toolbarlayout"/>
        </android.support.v7.widget.Toolbar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.08"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:text="알람 설정"
            android:textSize="@dimen/Divider"
            android:textColor="@color/textcolor_devider"
            android:background="@drawable/brg_divider"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal"
            >


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7.5"
                    android:gravity="center_vertical"
                    android:textColor="@color/textColor_subject"
                    android:text="Message 알람 설정"
                    android:textSize="@dimen/List_Title"
                    />

            <Switch
                android:id="@+id/swc_MessageRing_System"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:checked="false"
                android:gravity="center"
                android:textColor="@color/textColor_subject"
                android:text="켜짐"
                android:textSize="@dimen/List_Title"
                android:textOff="꺼짐"
                android:textOn="켜짐"
                tools:checked="true" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:background="#f2f2f2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal"
            >


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7.5"
                android:gravity="center_vertical"
                android:textColor="@color/textColor_subject"
                android:text="재능상태 알람 설정"
                android:textSize="@dimen/List_Title"
                />

            <Switch
                android:id="@+id/swc_ConditionRing_System"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:checked="false"
                android:gravity="center"
                android:textColor="@color/textColor_subject"
                android:text="켜짐"
                android:textSize="@dimen/List_Title"
                android:textOff="꺼짐"
                android:textOn="켜짐"
                tools:checked="true" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:background="#f2f2f2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal"
            >


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7.5"
                android:gravity="center_vertical"
                android:text="답변여부 알람 설정"
                android:textSize="@dimen/List_Title"
                android:textColor="@color/textColor_subject"
                />

            <Switch
                android:id="@+id/swc_AnswerRing_System"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:checked="false"
                android:gravity="center"
                android:textColor="@color/textColor_subject"
                android:text="켜짐"
                android:textSize="@dimen/List_Title"
                android:textOff="꺼짐"
                android:textOn="켜짐"
                tools:checked="true" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:background="#f2f2f2"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.08"
            android:gravity="center_vertical"
            android:text="계정 설정"
            android:paddingLeft="15dp"
            android:textColor="@color/textcolor_devider"
            android:textStyle="bold"
            android:textSize="@dimen/Divider"
            android:background="@drawable/brg_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal"
            >


            <TextView
                android:id="@+id/tv_Password_System"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7.5"
                android:gravity="center_vertical"
                android:text="비밀번호 변경"
                android:textColor="@color/textColor_subject"
                android:textSize="@dimen/List_Title"
                />



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:background="#f2f2f2"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:background="#f2f2f2"/>



        <Button
            android:id="@+id/btn_Save_System"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:text="저장 하기"
            android:textColor="@color/textcolor_bigbtn"
            android:textSize="@dimen/BigBtn"
            android:background="@drawable/bgr_bigbtn"
            />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/view_DrawerLayout_System"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <include
            layout="@layout/drawerlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
</android.support.v4.widget.DrawerLayout>