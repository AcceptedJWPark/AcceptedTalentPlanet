<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    android:id="@+id/TalentCondition1_listboxDL"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">




<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3.01"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:fitsSystemWindows="true"
        >
        <include
            android:layout_width="match_parent"
            android:layout_height="40dp"
            layout="@layout/toolbarlayout"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            >

            <Button
                android:id="@+id/TalentCondition_ShowGive"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/textbox_bluebg"
                android:gravity="center"
                android:text="재능드림 보기"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/TalentCondition_ShowTake"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="관심재능 보기"
                android:textColor="#bebebe"
                android:background="@drawable/textbox_whitebg"
                android:textSize="15dp"
                android:textStyle="bold"
                />

        </LinearLayout>



            <TextView
                android:id="@+id/TalentCondition_Condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="대기 중..."
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold|italic" />



        <LinearLayout
            android:id="@+id/TalentCondition_KeywordBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:visibility="visible"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TalentCondition_Keyword1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text="Guitar"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="13dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/TalentCondition_Keyword2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text="Piano"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="13dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/TalentCondition_Keyword3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text="Health"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="13dp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <TextView
            android:id="@+id/TalentCondition_TextView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="&quot;현재 회원님의 재능드림은 대기 상태 입니다." />

        <TextView
            android:id="@+id/TalentCondition_TextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="관심 목록을 확인 또는 T.Sharing을 진행해보세요!&quot;" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            >

            <Button
                android:id="@+id/TalentCondition_Button1"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/textbox_whitebg2dp"
                android:gravity="center"
                android:text="관심목록 확인"
                android:visibility="visible"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark" />


            <Button
                android:id="@+id/TalentCondition_Button2"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_toRightOf="@+id/TalentCondition_Button1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#32579a"
                android:text="T.Sharing"
                android:textStyle="bold"
                android:visibility="visible"
                android:textAllCaps="false"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/TalentCondition_Button3"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#32579a"
                android:text="재능드림 등록하기"
                android:textStyle="bold"
                android:visibility="gone"
                android:textAllCaps="false"
                android:textColor="#ffffff" />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.01"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#ebebeb"
        />


</LinearLayout>

    <FrameLayout
        android:id="@+id/TalentCondition_container1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <include
            layout="@layout/drawerlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
</android.support.v4.widget.DrawerLayout>