<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:weightSum="24"
    android:focusable="true"
    android:clickable="true"
    android:focusableInTouchMode="true"
    >

    <RelativeLayout
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_weight="1"
        >

        <LinearLayout
            android:id="@+id/ll_PreContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical">

        <ImageView
            android:id="@+id/preImg"
            android:layout_width="@dimen/Toolbar_Pre_Img"
            android:layout_height="@dimen/Toolbar_Pre_Img"
            android:layout_marginRight="5dp"
            android:src="@drawable/icon_backbtn_join"
            android:layout_alignTop="@+id/textView"
            android:layout_alignBottom="@+id/textView" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/ll_pre_Email_Join"
                android:layout_centerVertical="true"
                android:text="E-mail"
                android:textColor="@color/textColor_normal"
                android:textSize="@dimen/Toolbar_Pre_Txt" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.4"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/textColor_txtpage"
            android:textSize="@dimen/Page_Txt"
            android:text="&quot;비밀번호를 입력해주세요!&quot;"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:text="(영문, 숫자, 특수문자 두 개 이상 조합)"
            android:gravity="center"
            android:textColor="@color/textColor_object"
            android:textSize="@dimen/Page_Txt_Example"
            />

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.6"
            >

        <EditText
            android:id="@+id/et_Password_pw_join"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Password"
            android:inputType="textWebPassword"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:paddingLeft="10dp"
            android:background="@drawable/bgr_inputbox"
            android:layout_weight="3"
            android:textSize="@dimen/Edit_Hint" />

        </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bgr_bigbtn"
        android:onClick="goNext"
        android:text="다 음"
        android:textSize="@dimen/BigBtn"
        android:textColor="@color/textcolor_bigbtn"
        />

</LinearLayout>
