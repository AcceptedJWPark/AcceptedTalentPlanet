<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#ffffff"
    android:padding="5dp"
    android:gravity="center"
    >
    <ImageView
        android:id="@+id/TalentSearching_Picture"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:layout_weight="1"
        android:gravity="center"
        android:src="@drawable/textpicture"
    />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:id="@+id/TalentSearching_Name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:singleLine="true"
            android:text="박종우"
            android:textSize="@dimen/ListView_TitleorName"
            android:textColor="#000000"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TalentSearching_Keyword1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="기타 연주"
                android:textColor="@color/textColor"
                android:textSize="@dimen/ListView_SecondLine"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="#f5f5f5"
                />

            <TextView
                android:id="@+id/TalentSearching_Keyword2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기타 독학"
                android:gravity="center"
                android:textColor="@color/textColor"
                android:textSize="@dimen/ListView_SecondLine"
                android:textStyle="bold"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="#f5f5f5"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:id="@+id/TalentSearching_Keyword3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="기타 연습하기"
                android:textColor="@color/textColor"
                android:textSize="@dimen/ListView_SecondLine"
                android:singleLine="true"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="#f5f5f5"
                />
        </LinearLayout>




    </LinearLayout>



</LinearLayout>


