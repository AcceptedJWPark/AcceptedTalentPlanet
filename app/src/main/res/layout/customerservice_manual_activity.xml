<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="24"
    android:orientation="vertical"
    android:background="#ffffff"
    android:clickable="true"
    android:focusableInTouchMode="true"
    >

    <LinearLayout
        android:id="@+id/ll_Toolbar_Question"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:background="@color/toolbarcolor_background"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <LinearLayout
                android:id="@+id/ll_PreContainer_Manual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="@dimen/Toolbar_Pre_Img"
                    android:layout_height="@dimen/Toolbar_Pre_Img"
                    android:src="@drawable/icon_backbtn"
                    />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TalentPlanet 사용하기"
                android:textColor="@color/toolbarcolor_txtandimage"
                android:textSize="@dimen/ToolbarTxt"
                android:gravity="center"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_MyProfile_Manual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="My Profile"
            android:layout_margin="2dp"
            android:textSize="@dimen/List_Title"
            android:textColor="@color/textColor_normal"
            android:background="@drawable/bgr_manual_box"
            />

        <TextView
            android:id="@+id/tv_MyTalent_Manual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="My Talent"
            android:gravity="center"
            android:textSize="@dimen/List_Title"
            android:layout_margin="2dp"
            android:textColor="@color/textColor_normal"
            android:background="@drawable/bgr_manual_box"
            />

        <TextView
            android:id="@+id/tv_TSharing_Manual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="T.Sharing"
            android:gravity="center"
            android:textSize="@dimen/List_Title"
            android:textColor="@color/textColor_normal"
            android:layout_margin="2dp"
            android:background="@drawable/bgr_manual_box"
            />

        <TextView
            android:id="@+id/tv_TCondition_Manual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="나의 재능현황"
            android:textSize="@dimen/List_Title"
            android:layout_margin="2dp"
            android:textColor="@color/textColor_normal"
            android:background="@drawable/bgr_manual_box"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >


        <TextView
            android:id="@+id/tv_Friend_Manual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="친구 목록"
            android:gravity="center"
            android:textSize="@dimen/List_Title"
            android:layout_margin="2dp"
            android:textColor="@color/textColor_normal"
            android:background="@drawable/bgr_manual_box"
            />

        <TextView
            android:id="@+id/tv_SharingList_Manual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="재능공유 내역"
            android:gravity="center"
            android:textSize="@dimen/List_Title"
            android:layout_margin="2dp"
            android:textColor="@color/textColor_normal"
            android:background="@drawable/bgr_manual_box"
            />

        <TextView
            android:id="@+id/tv_Interesting_Manual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Shall we List"
            android:gravity="center"
            android:textSize="@dimen/List_Title"
            android:layout_margin="2dp"
            android:textColor="@color/textColor_normal"
            android:background="@drawable/bgr_manual_box"
            />
        <TextView
            android:id="@+id/tv_Message_Manual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Message"
            android:gravity="center"
            android:textSize="@dimen/List_Title"
            android:layout_margin="2dp"
            android:textColor="@color/textColor_normal"
            android:background="@drawable/bgr_manual_box"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <TextView
            android:id="@+id/tv_System_Manual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="설 정"
            android:gravity="center"
            android:textSize="@dimen/List_Title"
            android:layout_margin="2dp"
            android:textColor="@color/textColor_normal"
            android:background="@drawable/bgr_manual_box"
            />


        <TextView
            android:id="@+id/tv_CustomerService_Manual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="고객센터"
            android:gravity="center"
            android:textSize="@dimen/List_Title"
            android:layout_margin="2dp"
            android:textColor="@color/textColor_normal"
            android:background="@drawable/bgr_manual_box"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bgr_manual_box"
            android:layout_margin="2dp"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="@drawable/bgr_manual_box"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.4"
        android:gravity="center"
        android:textSize="@dimen/Page_Txt"
        android:textColor="@color/textColor_txtpage"
        android:text="문의 내용이 목록에 없는 경우 1:1 문의하기를 활용해주세요."
        />

    <Button
        android:id="@+id/btn_NextToQuestion_Manual"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:text="1:1 문의하기"
        android:textSize="@dimen/BigBtn"
        android:textColor="@color/textcolor_bigbtn"
        android:background="@drawable/bgr_bigbtn"
        />

</LinearLayout>