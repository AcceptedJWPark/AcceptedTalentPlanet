<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:weightSum="24"
    android:focusable="true"
    android:clickable="true"
    android:focusableInTouchMode="true"
    >

    <RelativeLayout
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_weight="1"
        >

        <LinearLayout
            android:id="@+id/pre_LL"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

        <ImageView
            android:id="@+id/preImg"
            android:layout_width="@dimen/Toolbar_Pre_Img"
            android:layout_height="@dimen/Toolbar_Pre_Img"
            android:layout_marginRight="5dp"
            android:src="@drawable/icon_backbtn_join"
            android:layout_alignTop="@+id/textView"
            android:layout_alignBottom="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/preImg"
            android:text="이름"
            android:textSize="@dimen/Toolbar_Pre_Txt"
            android:textColor="@color/textColor_normal"
            android:id="@+id/textView" />
        </LinearLayout>

    </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.4"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/Page_Txt"
            android:textColor="@color/textColor_txtpage"
            android:text="&quot;성별을 선택해주세요! 비공개 설정이 가능합니다.&quot;"
            />



    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_weight="1.6"
            >

            <Spinner
                android:id="@+id/Join_genderSpinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/bgr_inputbox"
                android:layout_weight="5"
                android:layout_gravity="center"
                android:textSize="@dimen/SpinnerTxt"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"

                />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bgr_inputbox"
            >
            <CheckBox
                android:id="@+id/Join_GenderNoShowCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비공개"
                android:textColor="@color/textColor_normal"
                android:textSize="@dimen/CheckBox_Txt"
                android:layout_gravity="center"
                android:gravity="center"
                />
        </LinearLayout>

        </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bgr_bigbtn"
        android:onClick="goNext"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="다 음"
        android:textAllCaps="false"
        android:textColor="@color/textcolor_bigbtn"
        android:textSize="@dimen/BigBtn"
        />

</LinearLayout>
