<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/Title_L"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Talent Planet"
            android:shadowColor="#32579a"
            android:shadowDx="5"
            android:shadowDy="2"
            android:shadowRadius="5"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#32579a"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:layout_marginBottom="5dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Info_L"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/Title_L">

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textSize="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <requestFocus/>
        </EditText>

        <EditText
            android:id="@+id/et_pawd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textWebPassword"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <Button
            android:id="@+id/Log_btn"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#32579a"
            android:textColor="#ffffff"
            android:onClick="loginClicked"
            android:text="Log-In"
            android:textStyle="bold"
            android:textSize="15dp"/>


        </LinearLayout>


    <LinearLayout
        android:id="@+id/clickLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Info_L"
        >

    <TextView
        android:id="@+id/txt03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디 또는 비밀번호 찾기"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt03"
        android:layout_centerHorizontal="true"
        android:text="Click here"
        android:textColor="#00f"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <Button
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Talent Planet 회원가입"
        android:layout_below="@+id/clickLL"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@drawable/textbox1"
        android:onClick="LoginClicked"
        android:textColor="#32579a"
        />

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Accepted ⓒompany : Talent Planet 2017"
    android:gravity="center"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="5dp"
    />

</RelativeLayout>