<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    android:id="@+id/MyProfile_listboxDL"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:theme="@style/AppTheme.NoActionBar"
        android:background="#ffffff">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:contentInsetStart="0dp"
            android:contentInsetLeft="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:fitsSystemWindows="true"
            >
            <include
                android:layout_width="match_parent"
                android:layout_height="40dp"
                layout="@layout/toolbarlayout"/>
        </android.support.v7.widget.Toolbar>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3.6">
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="6"
                    android:adjustViewBounds="true"
                    android:src="@drawable/textpicture" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="최대 5장 등록 가능"
                    android:textColor="@color/myProfileText"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#f5f5f5"
                    >
                </View>
                <!--, 필수 공개 레이아웃(E-mail)-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="E-mail"
                        android:textColor="#000000"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/MyProfile_Email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:gravity="left"
                        android:paddingLeft="10dp"
                        android:text="pjw910123@naver.com"
                        android:textColor="@color/myProfileText"
                        android:textSize="12dp" />
                </LinearLayout>

                <!--, 필수 공개 레이아웃(이름)-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="이 름"
                        android:textColor="#000000"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/MyProfile_Name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:gravity="left"
                        android:paddingLeft="10dp"
                        android:text="박종우"
                        android:textColor="@color/myProfileText"
                        android:textSize="12dp" />
                </LinearLayout>


                <!--, 필수 공개 레이아웃(성별)-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="성 별"
                        android:textColor="#000000"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8">

                        <TextView
                            android:id="@+id/MyProfile_Gender"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5"
                            android:gravity="left"
                            android:paddingLeft="10dp"
                            android:text="남 자"
                            android:textColor="@color/myProfileText"
                            android:textSize="12dp" />

                        <CheckBox
                            android:id="@+id/MyProfile_genderNoShowCheck"
                            android:layout_width="0dp"
                            android:layout_height="18dp"
                            android:layout_weight="5.5"
                            android:text="비공개"
                            android:textColor="@color/myProfileText"
                            android:textSize="11dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>


                <!--, 필수 공개 레이아웃(생년월일)-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="생년월일"
                        android:textColor="#000000"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8">

                        <TextView
                            android:id="@+id/MyProfile_Birthday"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5"
                            android:gravity="left"
                            android:paddingLeft="10dp"
                            android:text="1991.01.23"
                            android:textColor="@color/myProfileText"
                            android:textSize="12dp" />

                        <CheckBox
                            android:id="@+id/MyProfile_BirthdayNoShowCheck"
                            android:layout_width="0dp"
                            android:layout_height="18dp"
                            android:layout_weight="5.5"
                            android:text="비공개"
                            android:textColor="@color/myProfileText"
                            android:textSize="11dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="비밀번호"
                        android:textColor="#000000"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8">

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="10dp"
                            android:background="#aaaaaa"
                            android:gravity="center"
                            android:text="변경하기"
                            android:textColor="#ffffff"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#f5f5f5"
                    >
                </View>

                <!--, 선택 공개 레이아웃(직업)-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="직 업"
                        android:textColor="#000000"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8">

                        <EditText
                            android:id="@+id/MyProfile_Job"
                            android:layout_width="0dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:layout_weight="2.5"
                            android:background="@drawable/listbox_textdesign_onlywhite"
                            android:gravity="left"
                            android:paddingLeft="10dp"
                            android:scrollHorizontally="false"
                            android:singleLine="true"
                            android:text="무직"
                            android:textColor="@color/myProfileText"
                            android:textSize="13dp" />

                        <CheckBox
                            android:id="@+id/MyProfile_JobNoShowCheck"
                            android:layout_width="0dp"
                            android:layout_height="18dp"
                            android:layout_gravity="bottom"
                            android:layout_weight="5.5"
                            android:text="비공개"
                            android:textColor="@color/myProfileText"
                            android:textSize="11dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <!--, 선택 공개 레이아웃(자기소개)-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="재능드림"
                        android:textColor="#000000"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8">

                        <TextView
                            android:id="@+id/MyProfile_GiveTalent1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:paddingLeft="10dp"
                            android:text="Guitar"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="13dp"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textStyle="bold|italic" />

                        <TextView
                            android:id="@+id/MyProfile_GiveTalent2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:paddingLeft="10dp"
                            android:text="Piano"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="13dp"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textStyle="bold|italic" />

                        <TextView
                            android:id="@+id/MyProfile_GiveTalent3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:paddingLeft="10dp"
                            android:text="Drum"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="13dp"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textStyle="bold|italic" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="관심재능"
                        android:textColor="#000000"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8">

                        <TextView
                            android:id="@+id/MyProfile_TakeTalent1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:paddingLeft="10dp"
                            android:text="농구"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="13dp"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textStyle="bold|italic" />

                        <TextView
                            android:id="@+id/MyProfile_TakeTalent2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:paddingLeft="10dp"
                            android:text="야구"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="13dp"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textStyle="bold|italic" />

                        <TextView
                            android:id="@+id/MyProfile_TakeTalent3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:paddingLeft="10dp"
                            android:text="축구"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="13dp"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textStyle="bold|italic" />
                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#f5f5f5"
                    >
                </View>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:baselineAligned="false">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:layout_marginTop="10dp"
                    android:background="#32579a"
                    android:text="저장하기"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/MyProfile_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <include
            layout="@layout/drawerlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>


</android.support.v4.widget.DrawerLayout>
