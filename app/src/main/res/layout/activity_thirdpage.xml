<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:weightSum="10">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="0.4"
            >
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Talent Planet은 취미, 정보공유, 소모임 등"
            android:textSize="15dp"
            android:layout_marginBottom="3dp"
            android:textStyle="bold|italic"
            />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="다양한 활동의 장이 마련되어 있습니다."
                    android:textSize="15dp"
                    android:textStyle="bold|italic"
                    android:layout_marginBottom="10dp"
                    />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&quot;당신의 재능을 공유해주세요.&quot;"
            android:textSize="21dp"
            android:textStyle="bold|italic"
            />

                <Button
                    android:id="@+id/StartBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:onClick="clickLogin"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="TalentPlanet 시작하기"
                    android:textAllCaps="false"
                    android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9.7">

            <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Accepted ⓒompany : TalentPlanet 2017"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="center"
            />
        </LinearLayout>
    </LinearLayout>
