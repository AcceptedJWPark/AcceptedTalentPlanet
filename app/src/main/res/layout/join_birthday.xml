<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:focusable="true"
    android:clickable="true"
    android:focusableInTouchMode="true"
    >

        <RelativeLayout
            android:id="@+id/rl_preContainer_join_birth"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            >

            <LinearLayout
                android:id="@+id/ll_preContainer_Birth_Join"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

        <ImageView
            android:id="@+id/preImg"
            android:layout_width="@dimen/Toolbar_Pre_Img"
            android:layout_height="@dimen/Toolbar_Pre_Img"
            android:src="@drawable/icon_backbtn_join"
            android:layout_marginRight="5dp"
            android:layout_alignTop="@+id/textView"
            android:layout_alignBottom="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/preImg"
            android:text="성별"
            android:textSize="@dimen/Toolbar_Pre_Txt"
            android:textColor="@color/textColor_normal"
            android:id="@+id/textView" />
            </LinearLayout>
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_TitleContainer_join_birth"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/Page_Txt"
            android:textColor="@color/textColor_txtpage"
            android:text="&quot;생년월일을 입력해주세요!&quot;"
            />



    <LinearLayout
        android:id="@+id/ll_birthContainer_join_birth"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            >

        <EditText
            android:id="@+id/et_Yeat_birth_Join"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/bgr_inputbox"
            android:layout_weight="1.5"
            android:hint="YYYY"
            android:gravity="center"
            android:inputType="number"
            android:textSize="@dimen/Edit_Hint" />

        <EditText
            android:id="@+id/et_Month_birth_Join"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/bgr_inputbox"
            android:layout_marginLeft="@dimen/Margin_et"
            android:layout_marginRight="@dimen/Margin_et"
            android:layout_weight="1"
            android:hint="MM"
            android:gravity="center"
            android:inputType="number"
            android:textSize="@dimen/Edit_Hint"
            />

        <EditText
            android:id="@+id/et_Day_birth_Join"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/bgr_inputbox"
            android:layout_weight="1"
            android:hint="DD"
            android:gravity="center"
            android:inputType="number"
            android:textSize="@dimen/Edit_Hint"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center"
            android:layout_marginLeft="@dimen/Margin_et"
            >
        <CheckBox
            android:id="@+id/Join_BirthDayNoShowCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비공개"
            android:textColor="@color/textColor_normal"
            android:textSize="@dimen/CheckBox_Txt"
            android:layout_gravity="center"
            android:gravity="center"
            />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/trashView_join_birth"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <Button
        android:id="@+id/btn_Accept_birth_join"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/bgr_bigbtn"
        android:onClick="goRegist"
        android:text="가입 완료"
        android:textSize="@dimen/BigBtn"
        android:textColor="@color/textcolor_bigbtn"
        />

</LinearLayout>
