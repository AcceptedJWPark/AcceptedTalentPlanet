<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:weightSum="24"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

        <RelativeLayout
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:layout_weight="2"
            >

        <ImageView
            android:id="@+id/preImg"
            android:layout_width="@dimen/Toolbar_Pre_Img"
            android:layout_height="@dimen/Toolbar_Pre_Img"
            android:src="@android:drawable/ic_menu_revert"
            android:background="@drawable/nobackground"
            android:tint="@color/textColor"
            android:layout_alignTop="@+id/textView"
            android:layout_alignBottom="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/preImg"
            android:text="성별"
            android:textSize="@dimen/Toolbar_Pre_Txt"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            android:id="@+id/textView" />

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textSize="@dimen/Page_Txt"
            android:text="&quot;생년월일을 입력해주세요!&quot;"
            />



    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            >

        <EditText
            android:id="@+id/Join_Birth_Year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:hint="YYYY"
            android:gravity="center"
            android:inputType="number"
            android:textSize="@dimen/Edit_Hint" />

        <EditText
            android:id="@+id/Join_Birth_Month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:hint="MM"
            android:gravity="center"
            android:inputType="number"
            android:textSize="@dimen/Edit_Hint"
            />

        <EditText
            android:id="@+id/Join_Birth_Day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="DD"
            android:gravity="center"
            android:inputType="number"
            android:textSize="@dimen/Edit_Hint"
            />

        <CheckBox
            android:id="@+id/Join_BirthDayNoShowCheck"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:text="비공개"
            android:background="#ffffff"
            android:textSize="@dimen/CheckBox_Txt"
            android:textStyle="bold"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/big_button_background"
        android:onClick="goRegist"
        android:text="가입 완료"
        android:textColor="@color/textColor"
        android:textSize="@dimen/BigBtn"
        android:textStyle="bold"
        />

</LinearLayout>
