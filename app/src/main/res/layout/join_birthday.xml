<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:focusable="true"
    android:clickable="true"
    android:focusableInTouchMode="true"
    >

        <RelativeLayout
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/Height40dp"
            android:gravity="center_vertical"
            >

            <LinearLayout
                android:id="@+id/ll_preContainer_Birth_Join"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

        <ImageView
            android:id="@+id/preImg"
            android:layout_width="@dimen/Toolbar_Img"
            android:layout_height="@dimen/Toolbar_Img"
            android:src="@drawable/icon_backbtn_join"
            android:layout_marginRight="5dp"
            android:layout_alignTop="@+id/textView"
            android:layout_alignBottom="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/preImg"
            android:text="성별"
            android:textSize="@dimen/MainTxt"
            android:textColor="@color/textColor_normal"
            android:id="@+id/textView" />
            </LinearLayout>
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:textSize="@dimen/SubTxt"
            android:textColor="@color/textColor_txtpage"
            android:text="&quot;생년월일을 입력해주세요!&quot;"
            />



    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            >

        <EditText
            android:id="@+id/et_Yeat_birth_Join"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/bgr_inputbox"
            android:layout_weight="1.5"
            android:hint="YYYY"
            android:gravity="center"
            android:inputType="number"
            android:textSize="@dimen/AdditionTxt" />

        <EditText
            android:id="@+id/et_Month_birth_Join"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/bgr_inputbox"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:hint="MM"
            android:gravity="center"
            android:inputType="number"
            android:textSize="@dimen/AdditionTxt"
            />

        <EditText
            android:id="@+id/et_Day_birth_Join"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/bgr_inputbox"
            android:layout_weight="1"
            android:hint="DD"
            android:gravity="center"
            android:inputType="number"
            android:textSize="@dimen/AdditionTxt"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            >
        <CheckBox
            android:id="@+id/Join_BirthDayNoShowCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비공개"
            android:textColor="@color/textColor_normal"
            android:textSize="@dimen/SubTxt"
            android:layout_gravity="center"
            android:gravity="center"
            />
        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btn_Accept_birth_join"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/bgr_bigbtn"
        android:onClick="goRegist"
        android:text="가입 완료"
        android:textSize="@dimen/MainTxt"
        android:textColor="@color/textcolor_bigbtn"
        />

</LinearLayout>
