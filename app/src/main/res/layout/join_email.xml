<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:weightSum="24"
    android:focusable="true"
    android:clickable="true"
    android:focusableInTouchMode="true"
    >

    <RelativeLayout
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        >

        <LinearLayout
            android:id="@+id/pre_LL"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            >
            <ImageView
                android:id="@+id/preImg"
                android:layout_width="@dimen/Toolbar_Pre_Img"
                android:layout_height="@dimen/Toolbar_Pre_Img"
                android:src="@drawable/icon_backbtn_join"
                android:layout_marginRight="5dp"
                android:layout_alignTop="@+id/textView"
                android:layout_alignBottom="@+id/textView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/preImg"
                android:text="로그인"
                android:textSize="@dimen/Toolbar_Pre_Txt"
                android:textColor="@color/textColor_normal"
                android:id="@+id/textView" />
        </LinearLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.4"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/textColor_txtpage"
            android:textSize="@dimen/Page_Txt"
            android:text="&quot;ID로 사용 될 E-mail을 입력해주세요!&quot;"
            />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Join_Email"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/bgr_inputbox"
            android:layout_weight="8"
            android:hint="E-mail"
            android:paddingLeft="10dp"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/Edit_Hint" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            >

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.2"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bgr_bigbtn"
                android:text="E-mail 인증"
                android:textAllCaps="false"
                android:textColor="@color/textcolor_bigbtn"
                android:textSize="@dimen/ListView_Btn"
                android:onClick="emailCheck"
                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.2"/>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/accept_join_mail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6"
        android:orientation="vertical"
        android:visibility="invisible"
        android:layout_marginTop="15dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/Join_joinCode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/bgr_inputbox"
                android:layout_weight="8"
                android:paddingLeft="10dp"
                android:hint="인증번호 입력"
                android:textSize="@dimen/Edit_Hint"
                />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"

                >

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"/>

            <Button
                android:id="@+id/btnAccept"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bgr_bigbtn"
                android:text="인증 완료"
                android:textColor="@color/textcolor_bigbtn"
                android:textAllCaps="false"
                android:textSize="@dimen/ListView_Btn"
                android:onClick="acceptEmail"
                />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"/>

         </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <Button
        android:id="@+id/accept_join_mail_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/bgr_bigbtn"
        android:onClick="goNext"
        android:text="다 음"
        android:visibility="invisible"
        android:textColor="@color/textcolor_bigbtn"
        android:textAllCaps="false"
        android:textSize="@dimen/BigBtn"
        />


</LinearLayout>
