<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:focusable="true"
    android:clickable="true"
    android:focusableInTouchMode="true"
    >

    <RelativeLayout
        android:id="@+id/rl_preContainer_join_email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:id="@+id/ll_pre_Email_Join"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            >
            <ImageView
                android:id="@+id/preImg"
                android:layout_width="@dimen/Toolbar_Pre_Img"
                android:layout_height="@dimen/Toolbar_Pre_Img"
                android:src="@drawable/icon_backbtn_join"
                android:layout_marginRight="5dp"
                android:layout_alignTop="@+id/textView"
                android:layout_alignBottom="@+id/textView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/preImg"
                android:text="로그인"
                android:textSize="@dimen/Toolbar_Pre_Txt"
                android:textColor="@color/textColor_normal"
                android:id="@+id/textView" />
        </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_TitleContainer_join_email"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/textColor_txtpage"
            android:textSize="@dimen/Page_Txt"
            android:text="&quot;ID로 사용 될 E-mail을 입력해주세요!&quot;"
            />



    <LinearLayout
        android:id="@+id/ll_birthContainer_join_email"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_Email_Join"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/bgr_inputbox"
            android:layout_weight="9"
            android:hint="E-mail"
            android:paddingLeft="10dp"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/Edit_Hint" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            >

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.2"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bgr_bigbtn"
                android:text="E-mail 인증"
                android:textAllCaps="false"
                android:textColor="@color/textcolor_bigbtn"
                android:textSize="@dimen/ListView_Btn"
                android:onClick="emailCheck"
                android:includeFontPadding="false"
                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.2"/>

        </LinearLayout>



    </LinearLayout>

    <View
        android:id="@+id/trashView1_join_email"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:id="@+id/ll_AcceptEmailContainer_Join_email"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="vertical"
        android:visibility="visible"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_EmailCode_Email_Join"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/bgr_inputbox"
                android:layout_weight="9"
                android:paddingLeft="10dp"
                android:hint="인증번호 입력"
                android:textSize="@dimen/Edit_Hint"
                android:inputType="number"
                />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"

                >

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"/>

            <Button
                android:id="@+id/btn_ConfirmEmail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bgr_bigbtn"
                android:text="인증 완료"
                android:textColor="@color/textcolor_bigbtn"
                android:textAllCaps="false"
                android:textSize="@dimen/ListView_Btn"
                android:onClick="acceptEmail"
                android:includeFontPadding="false"
                />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"/>

         </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <View
        android:id="@+id/trashView2_join_email"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>


    <Button
        android:id="@+id/btn_Accept_join_email"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/bgr_bigbtn"
        android:onClick="goNext"
        android:text="다 음"
        android:visibility="visible"
        android:textColor="@color/textcolor_bigbtn"
        android:textAllCaps="false"
        android:textSize="@dimen/BigBtn"
        />


</LinearLayout>
