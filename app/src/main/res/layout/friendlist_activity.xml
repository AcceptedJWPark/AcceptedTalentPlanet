<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/SharingList_WholeLL"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="24"
    android:clickable="true"
    android:focusableInTouchMode="true"
    >



    <LinearLayout
        android:id="@+id/claim_toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.32"
        android:gravity="center"
        android:background="@color/toolbarcolor_background"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >

            <LinearLayout
                android:id="@+id/FriendList_PreBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="@dimen/Toolbar_Pre_Img"
                    android:layout_height="@dimen/Toolbar_Pre_Img"
                    android:textColor="@color/toolbarcolor_txtandimage"
                    android:src="@android:drawable/ic_menu_revert"
                    android:textSize="@dimen/Toolbar_Pre_Txt"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이전"
                    android:textColor="@color/toolbarcolor_txtandimage"
                    android:textSize="@dimen/Toolbar_Pre_Txt"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="친구 목록"
                android:textSize="@dimen/ToolbarTxt"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textColor="@color/toolbarcolor_txtandimage"
                />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >

        <Button
            android:id="@+id/FriendList_ShowGive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="재능 드림"
            android:layout_marginRight="5dp"
            android:textColor="@color/textcolor_giveortake_clicked"
            android:background="@drawable/small_button_graybackground"
            android:textSize="@dimen/GiveorTakeBtn"
            />

        <Button
            android:id="@+id/FriendList_ShowTake"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="관심 재능"
            android:textColor="@color/textcolor_giveortake_unclicked"
            android:background="@drawable/small_button_whitebackground"
            android:textSize="@dimen/GiveorTakeBtn"
            />

    </LinearLayout>
    <ListView
        android:id="@+id/FriendList_ListView_GIVE"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="21.68"
        android:visibility="visible"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        >
    </ListView>
    <ListView
        android:id="@+id/FriendList_ListView_TAKE"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="21.68"
        android:visibility="visible"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        >
    </ListView>


</LinearLayout>