<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/big_button_background"
    android:weightSum="24"

    >

    <LinearLayout
        android:id="@+id/Title_L"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical"
        android:gravity="center"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/login_logoimg"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:src="@drawable/logo_fakefile"
                />

            <TextView
                android:id="@+id/login_logotitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/login_logoimg"
                android:gravity="center"
                android:text="Talent Planet"
                android:letterSpacing="0.1"
                android:textColor="@color/loginMainTitle"
                android:textSize="@dimen/LogIn_Title"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Info_L"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/Title_L"
        >

        <EditText
            android:id="@+id/Login_ID"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:hint="E-mail"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/LogIn_Edit_Hint"
            android:background="@drawable/loginedittxt_background"
            >
        </EditText>

        <EditText
            android:id="@+id/Login_Password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:hint="Password"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/loginedittxt_background"
            android:inputType="textWebPassword"
            android:textSize="@dimen/LogIn_Edit_Hint"

            />


        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/LogIn_PageSubTxt"
            android:textColor="@color/loginMainTitle"
            android:text="회원 가입"
            />


        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="@dimen/LogIn_PageTxt"
            android:onClick="goRegist"
            android:text="Click here"
            android:textColor="@color/loginPasswordLost"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/clickLL"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_below="@+id/Info_L"
        >

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="@dimen/LogIn_PageSubTxt"
        android:textColor="@color/loginMainTitle"
        android:text="비밀번호 찾기"
       />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/LogIn_PageTxt"
            android:gravity="right"
            android:onClick="PasswordLost"
            android:text="Click here"
            android:textColor="@color/loginPasswordLost"
            />
    </LinearLayout>



    </LinearLayout>

    <Button
        android:id="@+id/Log_btn"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:background="@drawable/big_button_background2"
        android:textColor="@color/textcolor_bigbtn"
        android:onClick="loginClicked"
        android:text="로그인"
        android:textSize="@dimen/BigBtn"/>

    <TextView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="8.7"
    android:text="Accepted ⓒompany : Talent Planet 2018"
    android:gravity="center|bottom"
    android:textSize="@dimen/Page_Txt"
    android:textColor="@color/loginMainTitle"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="10dp"
    />

</LinearLayout>