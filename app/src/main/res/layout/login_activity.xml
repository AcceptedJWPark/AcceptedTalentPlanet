<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="24"

    >

    <LinearLayout
        android:id="@+id/Title_L"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:gravity="center"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Talent Planet"
            android:textSize="@dimen/LogIn_Title"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Info_L"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_below="@+id/Title_L"
        >

        <EditText
            android:id="@+id/Login_ID"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/LogIn_Edit_Hint"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <requestFocus/>
        </EditText>

        <EditText
            android:id="@+id/Login_Password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:hint="Password"
            android:inputType="textWebPassword"
            android:textSize="@dimen/LogIn_Edit_Hint"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>


        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>

    <Button
        android:id="@+id/Log_btn"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/big_button_background"
        android:textColor="@color/textColor"
        android:onClick="loginClicked"
        android:text="로그인"
        android:textStyle="bold"
        android:textSize="@dimen/BigBtn"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>

    <LinearLayout
        android:id="@+id/clickLL"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Info_L"
        >

    <TextView
        android:id="@+id/txt03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/LogIn_PageTxt"
        android:text="아이디 또는 비밀번호 찾기"
       />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/LogIn_PageTxt"
            android:layout_toRightOf="@id/txt03"
            android:onClick="testFunc"
            android:text="Click here"
            android:textColor="#00f"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:gravity="center"
        android:orientation="vertical"
        >


        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_below="@+id/clickLL"
            android:background="@drawable/small_button_whitebackground"
            android:onClick="goRegist"
            android:textSize="@dimen/LogIn_SmallBtn"
            android:text="Talent Planet 회원가입"
            android:textAllCaps="false"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/textColor"
            android:textStyle="bold" />


    </LinearLayout>




    <TextView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="10.5"
    android:text="Accepted ⓒompany : Talent Planet 2017"
    android:gravity="center|bottom"
    android:textSize="13dp"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="5dp"
    />

</LinearLayout>