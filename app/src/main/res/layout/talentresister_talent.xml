<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".TalentResister.TalentResister_Talent_Activity"
    android:weightSum="24"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"
        android:orientation="vertical"
        >




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="&quot;입력한 키워드를 통해 재능 매칭이 됩니다. (최대 3개 입력)&quot;"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/Page_Txt"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Ex) 기타,  기타 연주,  기타 독학"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/Page_Txt_Example"
            />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        >

        <EditText
            android:id="@+id/TalentResister_Talent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:dropDownWidth="match_parent"
            android:textSize="@dimen/Edit_Hint"
            android:paddingLeft="5dp"
            android:maxLines="1"
            android:hint="재능 등록"
            android:layout_weight="4"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>

            <Button
                android:id="@+id/addTalentBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@drawable/small_button_whitebackground"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="등록"
                android:textColor="#000000"
                android:textSize="@dimen/ListView_Btn"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>







    <ListView
        android:id="@+id/talent_ListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:dividerHeight="0dp"
        android:divider="#ffffff"
        >
    </ListView>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/big_button_background"
        android:onClick="goNext"
        android:text="다 음"
        android:textAllCaps="false"
        android:textSize="@dimen/BigBtn"
        android:textStyle="bold"
        android:textColor="@color/textColor" />

</LinearLayout>
