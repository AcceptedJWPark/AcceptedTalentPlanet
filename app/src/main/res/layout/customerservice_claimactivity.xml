<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:weightSum="24"
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/claim_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/MyProfile_Toolbar"
        android:gravity="center"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:background="@color/toolbarcolor_background"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <LinearLayout
                android:id="@+id/CustomerService_Claim_PreBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="@dimen/Toolbar_Pre_Img"
                    android:layout_height="@dimen/Toolbar_Pre_Img"
                    android:tint="@color/toolbarcolor_txtandimage"
                    android:src="@android:drawable/ic_menu_revert"
                    android:textSize="@dimen/Toolbar_Pre_Txt"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이전"
                    android:textColor="@color/toolbarcolor_txtandimage"
                    android:textSize="@dimen/Toolbar_Pre_Txt"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="신고 하기"
                android:textSize="@dimen/ToolbarTxt"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textColor="@color/toolbarcolor_txtandimage"
                />

        </RelativeLayout>


    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:clickable="true"
            android:focusableInTouchMode="true"
            >

            <LinearLayout
                android:id="@+id/claim_LL1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.5"
                        android:gravity="center|left"
                        android:text="신고 대상"
                        android:textColor="#000000"
                        android:textSize="@dimen/Page_ItemTitle"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:orientation="vertical"
                        >
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.22"/>
                        <TextView
                            android:id="@+id/CustomerService_Claim_SharingList"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/resistbtn_whitebackground"
                            android:gravity="center"
                            android:text="공유 내역보기"
                            android:textColor="@color/textColor_subject"
                            android:textSize="@dimen/GiveorTakeBtn"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.22"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.5"
                        android:gravity="center|left"
                        android:text="신고 유형"
                        android:textColor="#000000"
                        android:textSize="@dimen/Page_ItemTitle"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:orientation="vertical"
                        >
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.22"/>

                        <Spinner
                            android:id="@+id/CustomerService_Claim_Spinner"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/resistbtn_whitebackground"
                            android:gravity="center"
                            android:padding="3dp"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.22"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/claim_Devider1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/Claim_Divider2"
                android:background="#eeeeee"
                />

            <TextView
                android:id="@+id/claim_Txt1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="&quot;공유 내역보기에서 신고 대상을 선택해주세요.&quot;"
                android:gravity="center"
                android:ellipsize="end"
                android:lines="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/textColor_txtpage"
                android:textSize="@dimen/Page_Txt"
                />

            <LinearLayout
                android:id="@+id/claim_LL2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/Claim_Edit_Layout"
                android:gravity="center"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/edittext_background"
                    android:orientation="vertical"
                    >

                    <android.support.v4.widget.NestedScrollView
                        android:id="@+id/Claim_EditTxtScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:padding="3dp"
                        android:background="#ffffff"
                        android:fillViewport="true"
                        android:layout_above="@+id/Claim_EditTxtLimitLL"
                        >

                        <EditText
                            android:id="@+id/Claim_EditTxt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#ffffff"
                            android:gravity="top"
                            android:hint="내용을 입력해주세요. 1000자로 제한됩니다."
                            android:maxLength="1000"
                            android:textSize="@dimen/Edit_Hint" />
                    </android.support.v4.widget.NestedScrollView>

                    <LinearLayout
                        android:id="@+id/Claim_EditTxtLimitLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="right"
                        >
                    <TextView
                        android:id="@+id/CustomerService_onebyoneTextLimit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_alignParentBottom="true"
                        android:layout_toLeftOf="@id/bar"
                        android:textColor="#000000"
                        android:textSize="@dimen/Edit_Hint"
                        android:layout_marginRight="3dp"
                        android:layout_marginBottom="3dp"
                        />

                    <TextView
                        android:id="@+id/bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:layout_alignParentBottom="true"
                        android:layout_toLeftOf="@id/text1000limit"
                        android:textSize="@dimen/Edit_Hint"
                        android:textColor="#000000"
                        android:layout_marginRight="3dp"
                        android:layout_marginBottom="3dp"
                        />

                    <TextView
                        android:id="@+id/text1000limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,000"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/Edit_Hint"
                        android:textColor="#000000"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="3dp"
                        />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>





            <LinearLayout
                android:id="@+id/claim_LL3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/Claim_List_Layout2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="13dp"
                    android:layout_weight="5"
                    android:layout_marginRight="5dp"
                    android:textColor="#000000"
                    android:background="@drawable/edittext_background"
                    android:textStyle="bold"
                    />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="첨부"
                    android:background="@drawable/resistbtn_whitebackground"
                    android:gravity="center"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:textColor="@color/textcolor_smallbtn"
                    android:textSize="@dimen/ListView_Btn"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/claim_LL4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/Claim_List_Layout2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp">


            <Button
                android:id="@+id/CustomerService_ClaimBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="신고 하기"
                android:gravity="center"
                android:textColor="@color/textcolor_bigbtn"
                android:background="@drawable/big_button_background"
                android:textSize="@dimen/BigBtn"
                />

            </LinearLayout>


            <TextView
                android:id="@+id/claim_Txt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor_txtpage"
                android:text="신고 결과는 &quot;신고내역&quot;에서 조회 할 수 있습니다."
                android:layout_below="@id/CustomerService_ClaimBtn"
                android:textSize="@dimen/Page_Txt"
                android:gravity="center"
                />


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>

</ScrollView>