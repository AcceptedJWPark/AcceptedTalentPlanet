<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#ffffff"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:gravity="center"
    android:weightSum="7"
    >
    <LinearLayout
        android:id="@+id/pictureContainerLL"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="7dp"
        android:layout_marginRight="5dp"
        >
    <ImageView
        android:id="@+id/Alarm_Picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="false"
        android:gravity="center"
        android:background="@drawable/testpicture2"
    />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/alarm_TxtLL"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_marginLeft="5dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingRight="5dp"
            android:orientation="horizontal"
            >

        <TextView
            android:id="@+id/Alarm_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="박종우"
            android:singleLine="true"
            android:textSize="@dimen/List_Title"
            android:textColor="#000000"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/Alarm_Txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="님이 재능드림에 관심을 취소하였습니다."
            android:singleLine="true"
            android:textSize="@dimen/List_SubTitle"
            android:textColor="@color/textColor_txtpage"
            />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
            android:id="@+id/Alarm_RegistDate1"
            android:layout_width="wrap_content"
            android:textColor="@color/textColor_normal"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingLeft="5dp"
            android:text="2017.11.30. 12:32"
            android:textSize="@dimen/ListView_SecondLine"
            />
            <TextView
                android:id="@+id/Alarm_RegistDate2"
                android:layout_width="wrap_content"
                android:textColor="@color/textColor_normal"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:text="등록"
                android:textSize="@dimen/ListView_SecondLine"
                />
        </LinearLayout>

    </LinearLayout>

        <ImageView
            android:id="@+id/Alarm_DeleteList"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:padding="10dp"
            android:src="@drawable/icon_deletecheck"
            android:layout_height="match_parent"
            android:gravity="center"
            />

</LinearLayout>


