<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/Height70dp"
    android:gravity="center"
    android:background="#ffffff"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    >

    <LinearLayout
        android:id="@+id/ll_picContainer_Alarm"
        android:layout_width="@dimen/Height50dp"
        android:layout_height="@dimen/Height50dp"
        android:background="@drawable/bgr_picture_container"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:gravity="center"
        >
    <ImageView
        android:id="@+id/iv_Picture_Alarm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="false"
        android:background="@drawable/picure_basic"
        android:scaleType="fitXY"
    />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_txtContainer_Alarm"
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingRight="5dp"
            android:gravity="center|left"
            android:orientation="horizontal"
            >

        <TextView
            android:id="@+id/tv_Name_Alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="박종우"
            android:singleLine="true"
            android:textSize="@dimen/MainTxt"
            android:textColor="#000000"
            android:textStyle="bold" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_Txt_Alarm"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="새로운 메세지가 도착하였습니다."
            android:singleLine="true"
            android:textSize="@dimen/SubTxt"
            android:textColor="@color/textColor_txtpage"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_deleteContainer_Alarm"
        android:layout_weight="1.5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        >


        <LinearLayout
            android:id="@+id/ll_deleteContainer_Alarm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|right"

            >
            <TextView
                android:id="@+id/tv_date_Alarm"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:gravity="center|right"
                android:textSize="@dimen/SubTxt"
                android:textColor="@color/textColor_object"
                />


        </LinearLayout>

        <ImageView
            android:id="@+id/iv_DeleteIcon_Alarm"
            android:layout_width="@dimen/Icon30dp"
            android:layout_height="@dimen/Icon30dp"
            android:src="@drawable/icon_deletecheck"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:visibility="gone"
            />
    </RelativeLayout>

</LinearLayout>


